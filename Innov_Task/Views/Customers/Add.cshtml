@model Innov_Task.Models.Customer

@{
    ViewBag.Title = "Add";
}

<head>

</head>
<body>
    <div class="container">
        <br />
        <br />
        <form method="post" class="form-horizontal" enctype="multipart/form-data">

            <div class="form-group">
                @Html.LabelFor(a => a.Name, new { @class = "col-sm-3 label-control" })

                <div class="col-sm-6">

                    @Html.TextBoxFor(a => a.Name, new { @class = "form-control", placeholder = " Your Name" })
                </div>

                <div class="col-sm-3 bg-info">
                    @Html.ValidationMessageFor(a => a.Name)
                </div>

            </div>

            <div class="form-group">
                @Html.LabelFor(a => a.Email, new { @class = "col-sm-3 label-control" })

                <div class="col-sm-6">
                    @Html.TextBoxFor(a => a.Email, new { @class = "form-control",placeholder = "Your Email" })
                </div>

                <div class="col-sm-3 bg-danger">
                    @Html.ValidationMessageFor(a => a.Email)
                </div>
            </div>

            <div class="form-group">
                @Html.LabelFor(a => a.Address, new { @class = "col-sm-3 label-control" })

                <div class="col-sm-6">
                    @Html.TextBoxFor(a => a.Address, new { @class = "form-control", placeholder = "Your Address" })
                </div>

                <div class="col-sm-3 bg-danger">
                    @Html.ValidationMessageFor(a => a.Address)
                </div>
            </div>


            <div class="form-group">

                <div class="col-sm-6 col-sm-offest-3">

                    <input type="submit" value=@ViewBag.btnTitle class="btn btn-warning" />

                </div>

            </div>

        </form>
    </div>
</body>
@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
