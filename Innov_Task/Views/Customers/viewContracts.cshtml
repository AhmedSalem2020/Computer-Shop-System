@model IEnumerable<Innov_Task.Models.Contract>

@{
    ViewBag.Title = "viewContracts";
}

<head>
</head>
<br />
<br />

<body>

    <div class="container">

        <table class="table table-striped table-hover">
            <thead>
                <tr>
                    <th>Contract No.</th>
                    <th>Edit</th>
                    <th>Delete</th>
                </tr>
            </thead>
            <tbody>
                @if (Model.Count() == 0)
                {
                    <tr>
                        <td colspan="4"> No Data found</td>
                    </tr>
                }
                else
                {
                    foreach (var item in Model)
                    {
                    <tr>

                        <td> @item.Cont_No </td>


                        <td>
                            @Html.ActionLink("View", "viewCont", "Customers", new { Cont_No = item.Cont_No, Cust_Id = item.Cust_Id }, new { @class = "btn btn-warning" })

                            @*<a href="/Customers/viewContracts" class="btn btn-info">viewContracts</a>*@
                        </td>

                        <td>
                            @Html.ActionLink("Delete", "DeleteContract", "Customers", new { id = item.Cont_No }, new { @class = "btn btn-danger" })

                        </td>

                    </tr>
                    }
                }

        </table>
    </div>


</body>
